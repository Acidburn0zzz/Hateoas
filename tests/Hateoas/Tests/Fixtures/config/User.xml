<?xml version="1.0" encoding="UTF-8"?>
<hateoas xmlns="https://github.com/willdurand/Hateoas">
    <class name="Hateoas\Tests\Fixtures\User" providers="getRelations">
        <relation rel="self">
            <href uri="http://hateoas.web/user/42"/>
            <attribute name="type" value="application/json"/>
        </relation>

        <relation rel="foo">
            <href route="user_get">
                <parameter name="id" value="expr(object.getId())"/>
            </href>
            <embed>
                <content>expr(object.getFoo())</content>
            </embed>
        </relation>

        <relation rel="bar">
            <href uri="foo"/>
            <embed xml-element-name="barTag">
                <content>data</content>
            </embed>
        </relation>

        <relation rel="baz">
            <href route="user_get" absolute="true">
                <parameter name="id" value="expr(object.getId())"/>
            </href>
        </relation>

        <relation rel="boom">
            <href route="user_get" absolute="false">
                <parameter name="id" value="expr(object.getId())"/>
            </href>
        </relation>

        <relation rel="badaboom">
            <embed>
                <content>expr(object.getFoo())</content>
            </embed>
        </relation>

        <relation rel="hello">
            <href uri="/hello"/>
            <embed>
                <content>hello</content>
                <exclusion groups="group3,group4" since-version="1.1" until-version="2.3" max-depth="43" exclude-if="bar"/>
            </embed>
            <exclusion groups="group1, group2" since-version="1" until-version="2.2" max-depth="42" exclude-if="foo"/>
        </relation>
    </class>
</hateoas>
